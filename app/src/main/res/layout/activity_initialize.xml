<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wonderpush.demo.PreferencesActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/clientIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:id="@+id/clientIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Client ID" />

        <TextView
            android:id="@+id/secretTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secret"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:id="@+id/secretEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Secret" />

        <Button
            android:id="@+id/btnInitialize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initialize WonderPush" />

    </LinearLayout>
</ScrollView>
