<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseText" parent="@android:style/TextAppearance.Medium"></style>

    <style name="BigButton" parent="@style/BaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/BigButtons.textColor</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">20dp</item>
    </style>
    <color name="BigButtons.textColor">#FFFFFF</color>

    <style name="BigButton.A">
        <item name="android:background">@drawable/big_button_a</item>
    </style>
    <style name="BigButton.B">
        <item name="android:background">@drawable/big_button_b</item>
    </style>
    <style name="BigButton.C">
        <item name="android:background">@drawable/big_button_c</item>
    </style>
    <style name="BigButton.D">
        <item name="android:background">@drawable/big_button_d</item>
    </style>
    <style name="BigButton.E">
        <item name="android:background">@drawable/big_button_e</item>
    </style>
    <style name="BigButton.F">
        <item name="android:background">@drawable/big_button_f</item>
    </style>
    <style name="BigButton.G">
        <item name="android:background">@drawable/big_button_g</item>
    </style>
    <style name="BigButton.H">
        <item name="android:background">@drawable/big_button_h</item>
    </style>
    <style name="BigButton.I">
        <item name="android:background">@drawable/big_button_i</item>
    </style>
    <color name="BigButtons.backgroundA">#0090FF</color>
    <color name="BigButtons.backgroundAPressed">#A8CEEC</color>
